extends ../layout

block content
	section(id="login")
		.container
			.row
				div(class="col-xs-12")
					.form-wrap
						h1 Log in with your email account
						form(role="form" action="javascript:;" method="post" id="login-form" autocomplete="off")
							.form-group
								label(for="email" class="sr-only") Email
								input(type="email" name="email" id="email" class="form-control" placeholder="somebody@example.com")
							.form-group
								label(for="key" class="sr-only") Password
								input(type="password" name="key" id="key" class="form-control" placeholder="Password")
							.checkbox
								span(class="character-checkbox" onclick="showPassword()")
								span(class="label") Show password
							input(type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Log in")
							a(href="javascript:;" class="forget" data-toggle="modal" data-target=".forget-modal") Forgot your password?

